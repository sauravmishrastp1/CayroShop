<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.PaymentAcivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/tooar_layout"
        app:cardCornerRadius="0dp"
        android:background="@color/white"
        app:cardElevation="4dp"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary"
            >


            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:tint="@color/white" />



            <TextView
                android:id="@+id/titletv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/backbtn"
                android:layout_toLeftOf="@id/carticonview"
                android:layout_marginLeft="16dp"
                android:textSize="18sp"
                android:padding="3dp"
                android:text="Select Payment Method"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:textColor="@color/white" />




            <RelativeLayout
                android:id="@+id/carticonview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:text="Pay faster for all your shopping need"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="With Cayro Pay Balnce"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <Button
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:background="#FF9800"
            android:layout_marginEnd="50dp"
            android:text="Continue"
            android:layout_height="40dp"></Button>

        <TextView
        android:layout_width="wrap_content"
        android:text="CREDIT AND DEBIT CARDS"
        android:layout_margin="10dp"
        android:textSize="9dp"
        android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radio"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                </RadioButton>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/radio"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="RuPay ****8878"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="saurav"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Expires 01/10/2025"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:elevation="8dp"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radio"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                </RadioButton>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/layout"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/radio"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:text="RuPay ****8878"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="saurav"
                        android:layout_height="wrap_content">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Expires 01/10/2025"
                        android:layout_height="wrap_content">
                    </TextView>

                </LinearLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="MORE WAY TO PAY"
            android:layout_margin="10dp"
            android:textSize="9dp"
            android:layout_height="wrap_content">

        </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/payment_options"
                android:layout_margin="5dp"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>




        <Button
            android:layout_width="match_parent"
            android:layout_marginStart="50dp"
            android:background="#FF9800"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            android:text="Continue"
            android:layout_height="40dp">

        </Button>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>
