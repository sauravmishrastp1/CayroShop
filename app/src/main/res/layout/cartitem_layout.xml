<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/tools"
    android:elevation="8dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:id="@+id/product_img"
            android:src="@drawable/sprit"
            android:layout_height="100dp">

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/product_img"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="Breakfast and Dairy"
                android:id="@+id/brand_name"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Amul Butter"
                android:id="@+id/product_naame"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/saleprice"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:textSize="16dp"
                    android:text="price-: ₹597"
                    android:layout_height="wrap_content">


                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/addcart_background"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="102dp"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="9dp"
                        android:text="Remove"
                        android:textColor="@color/white">

                    </TextView>

                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="150dp"
                android:visibility="gone"
                android:background="@drawable/quantity"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/quantity"
                    android:text="1"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp">
                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/addquantbackground"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="-"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">
                    </TextView>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/addquantbackground"
                        android:layout_height="30dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="+"
                            android:textColor="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content">
                        </TextView>

                    </RelativeLayout>




                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/totalprice"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:text="Total-: ₹597"
                android:layout_height="wrap_content"></TextView>

            <View
                android:layout_width="match_parent"
                android:background="#919090"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_height="1dp">

            </View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Compare"
                    android:drawableStart="@drawable/ic_baseline_autorenew_24"
                    android:drawablePadding="9dp"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_autorenew_24">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Whislist"
                    android:layout_marginEnd="10dp"
                    android:textSize="14dp"
                    android:drawableStart="@drawable/whilist"
                    android:drawablePadding="9dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/whilist"
                    android:layout_marginRight="10dp">

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:id="@+id/view"
            android:layout_below="@id/layout"
            android:background="#BCBCBC"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/view"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/number_picker"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                numberpicker:min="0"
                numberpicker:max="10"
                android:visibility="gone"
                numberpicker:value="-5"
                numberpicker:unit="1"
                numberpicker:focusable="false"
                numberpicker:custom_layout="@layout/number_picker_custom_layout" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@drawable/quantity"
                android:layout_margin="5dp"
                android:layout_height="35dp">

                <RelativeLayout
                    android:layout_width="10dp"
                    android:id="@+id/minuss"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/addquantbackground"
                    android:layout_height="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                </TextView>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:id="@+id/counttxt"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">

                </TextView>
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_weight="1"
                    android:id="@+id/pluss"
                    android:layout_margin="5dp"
                    android:background="@drawable/addquantbackground"
                    android:layout_height="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="+"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content">
                </TextView>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/delet_cartitem"
                android:layout_margin="5dp"
                android:background="@drawable/quantity"
                android:layout_weight="1"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Delete"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:drawablePadding="9dp"
                    android:padding="5dp"
                    android:drawableStart="@drawable/ic_baseline_delete_forever_24"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_baseline_delete_forever_24"
                    android:gravity="center_horizontal">

                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:background="@drawable/quantity"
                android:layout_weight="1"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Save Later"
                    android:padding="5dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content">

                </TextView>
            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>