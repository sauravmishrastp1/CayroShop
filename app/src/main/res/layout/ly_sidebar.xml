<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        android:alpha="0.9"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/profileRelative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:padding="25dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                   android:layout_centerHorizontal="true"
                   >

                    <ImageView
                        android:id="@+id/profilePic"
                        android:src="@drawable/applogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    >

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="user"
                        android:layout_centerHorizontal="true"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/userphone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userName"
                        android:text="user@gmail.com"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/viewandEditprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View and edit profile"
                        android:layout_below="@id/userphone"
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/userphone"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center_vertical"
                            />

                        <TextView
                            android:id="@+id/coinstv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="12sp"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/white"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>


                </RelativeLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp"
                android:visibility="gone"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="16dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="for Your Family "
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/black" />


                </LinearLayout>


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/md_grey_850"/>




            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/profile_layout"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/profiletext"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="My profile"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/ordersview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="My Order"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/whishlistview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="Cart"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/mydoctorsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/paymentHealthCashView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="Payment And HealthCash"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>






            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/md_grey_850"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:id="@+id/testbookingview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="Shop By Category"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/category_cercyle"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/logoutview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:layout_margin="2dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center_vertical"
                    android:text="Logout"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/md_grey_850"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>


        </LinearLayout>




    </ScrollView>

</RelativeLayout>