<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/address_layout"
            android:layout_height="wrap_content">


        <RadioButton
            android:layout_width="wrap_content"
            android:id="@+id/radio_select"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        </RadioButton>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/radio_select"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Saurav Mishra"
                android:id="@+id/name"
                android:textColor="@color/black"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Alpha 1 ,A-154"
                android:id="@+id/address_line1"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Greater Noida ,up"
                android:id="@+id/address_line2"
                android:layout_height="wrap_content">

            </TextView>


        </LinearLayout>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/address_layout"
            android:orientation="vertical"
            android:visibility="gone"
            android:id="@+id/edit_addrss_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:id="@+id/address_select"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:textSize="12dp"
                android:background="@drawable/button_rectangle_background"
                android:text="Delivery this Address"
                android:padding="9dp"
                android:backgroundTint="#FF9800"
                android:layout_height="40dp"></Button>
            <Button
                android:layout_width="match_parent"
                android:id="@+id/edit_address"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:text="Edit Address"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:background="@drawable/button_rectangle_background"
                android:padding="9dp"
                android:layout_height="40dp">

            </Button>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>